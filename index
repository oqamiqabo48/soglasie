  <script>
    document.getElementById('year').textContent = new Date().getFullYear();
    const listEl = document.getElementById('reviews-list');
    const form = document.getElementById('review-form');
    function loadReviews(){
      const data = JSON.parse(localStorage.getItem('soglasie_reviews')||'[]');
      listEl.innerHTML = data.length? '' : '<div class="muted">Пока нет отзывов — станьте первым.</div>';
      data.forEach(r=>{
        const d = document.createElement('div');
        d.className = 'review';
        d.innerHTML = `<strong>${r.name}</strong> — ★${r.rating}/5<br><small>${new Date(r.date).toLocaleDateString('ru-RU')}</small><div style="margin-top:6px">${r.text.replace(/</g,'&lt;')}</div>`;
        listEl.appendChild(d);
      })
    }
    function saveReview(r){
      const data = JSON.parse(localStorage.getItem('soglasie_reviews')||'[]');
      data.unshift(r);
      localStorage.setItem('soglasie_reviews', JSON.stringify(data));
    }
    form.addEventListener('submit', (e)=>{
      e.preventDefault();
      const r = {
        name: form.name.value.trim(),
        rating: Math.max(1, Math.min(5, parseInt(form.rating.value||'5'))),
        text: form.text.value.trim(),
        date: Date.now()
      };
      if(!r.name || !r.text) return;
      saveReview(r);
      form.reset();
      form.rating.value = 5;
      loadReviews();
      alert('Спасибо! Ваш отзыв сохранён.');
    });
    loadReviews();
  </script>

